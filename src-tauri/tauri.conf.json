{
  "productName": "ProBors",
  "version": "0.1.0",
  "identifier": "com.probors.desktop",
  "build": {
    "devUrl": "https://dashboard.probors.com",
    "frontendDist": "https://dashboard.probors.com"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capabilities",
          "description": "Main window capabilities",
          "windows": ["main", "update-progress"],
          "permissions": [
            "updater:default",
            "dialog:default",
            "core:event:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "title": "ProBors",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "resources": ["assets/*"],
    "category": "Finance",
    "shortDescription": "Stock market analytics and trading tools",
    "longDescription": "ProBors Desktop provides real-time stock market analytics, AI-powered insights, and professional trading tools.",
    "copyright": "Â© 2024 ProBors",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJBOUJGNjA2MUNBNTg4RUIKUldUcmlLVWNCdmFiS2t5eHZrMmtnbFNhUFZFWEF2QnJ6SnNiMnNnRUZrRk1Odm1QTUJIOGVhbjgK",
      "endpoints": [
        "https://github.com/Grimanc/probors-desktop/releases/latest/download/latest.json"
      ]
    }
  }
}
